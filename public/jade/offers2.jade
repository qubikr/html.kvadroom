	mixin offer(id, typeClass, fade, photos, videos, title, price, desc, address, phone, company)
		.item(class=typeClass + ((fade) ? ' viewed' : ''))
			a.photo(href="#")
				if typeClass != 'sp'
					span.slide-left
					span.slide-right
					span.frames
						span.frames-content
							span.frame.loaded: img(src="http://lorempixel.com/240/180/city/?r=1" + id)

					span.info
						if photos > 0
							span.ico.pictures 1/#{photos}
						if videos > 0
							span.ico.video #{videos}
				else
					span.frames
						span.frames-content
							span.frame.loaded: img(src="http://lorempixel.com/240/180/city/?r=1" + id)

			.data
				.title #{title}
				.price #{price}&nbsp;
					if price != 'Звоните!'
						span.valute.rub: i ⃏

				.desc #{desc}
				ul.transport
					each item in address
						li #{item} 
				.phone #{phone} 

				if typeClass != 'sp' && typeClass != 'notautherized'
					.actions
						a(href="#", data-title=" "): i.icon-font.icon-font-compare
						a.heart(href="#", data-title=" "): i.icon-font.icon-font-heart_stroke
						a.trash(href="#", data-title=" "): i.icon-font.icon-font-trash-big

				else
					.company !{company}
				
				if typeClass == 'notautherized'
					.actions
						a(href="#", data-title="Хочу"): i.icon-font.icon-font-heart_stroke
						a(href="#", data-title="Не хочу"): i.icon-font.icon-font-trash-big

	script(src="js/offers-2.0.js")
